---
import MeetupCardSmall from "../components/MeetupCardSmall.astro";
import MeetupCardLarge from "../components/MeetupCardLarge.astro";

import type { Meetup } from "../data/types";

export interface Props {
  meetups: Meetup[];
}

const { meetups } = Astro.props as Props;
---

<div class="bg-gray-100 pb-4">
  <div class="my-6 mx-4 text-4xl font-extrabold text-slate-800">Meetups</div>

  <div class="flex flex-col">
    {
      meetups.length > 0 &&
        meetups.map((meetup) =>
          meetup.upComing ? (
            <MeetupCardLarge meetup={meetup} />
          ) : (
            <MeetupCardSmall meetup={meetup} />
          ),
        )
    }
  </div>
</div>
