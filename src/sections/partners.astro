---
import PartnerComponent from "../components/Partner.astro";

import type { Partner } from "../data/types";

export interface Props {
  partners: Partner[];
}

const { partners } = Astro.props as Props;
---

<div class="mt-12 px-6 flex flex-col items-start justify-between">
  <h1 class="text-5xl font-bold">Partners</h1>
  <h2  class="text-2xl font-light text-pink-500">THEY'RE AWESOME</h2>
</div>

<!-- for large grid grid-cols-3 gap-32 mt-12 -->
<div class="mt-12 flex flex-col items-center space-y-16">
  {partners.map( partner => <PartnerComponent partner={partner} />)}
</div>