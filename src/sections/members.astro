---
import MemberComponent from "../components/Member.astro";

import type { Member } from "../data/types";

export interface Props {
  members: Member[];
}

const { members } = Astro.props as Props;
---

<div class="mt-12 px-6 flex flex-col lg:flex-row items-start space-y-2 justify-between">
  <h2 class="text-2xl font-light text-pink-500 lg:order-last">OUR FOUNDING MEMBERS</h2>
  <h1 class="text-5xl font-bold">Members</h1>
</div>
<div class="mt-12 flex flex-col lg:flex-row items-center space-y-6 justify-between lg:justify-around">
  {members.map( member => <MemberComponent member={member} />)}
</div>
