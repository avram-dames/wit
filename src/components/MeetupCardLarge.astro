---
import type { Meetup } from "../data/types";

export interface Props {
  meetup: Meetup;
}

const { meetup } = Astro.props as Props;
---

<div class="mx-4 p-4 flex flex-col bg-white">
  <!-- Title -->
  <div class="text-2xl font-extrabold text-pink-500 mb-4">{meetup.title}</div>

  <!-- Desctiption -->
  {meetup.description.map((p) => <p>{p}</p>)}

  <div class="flex flex-col items-center lg:flex-row lg:justify-end lg:gap-4 lg:items-start">
    <div class="lg:flex lg:flex-col lg:items-end">
      <!-- Date -->
      <div class="text-2xl lg:text-xl font-medium text-pink-500 mt-4">
        Date: {
          meetup.date.toLocaleDateString("en-gb", {
            year: "numeric",
            month: "long",
            day: "numeric",
            timeZone: "utc",
          })
        }
      </div>

      <!-- Location -->
      <div class="text-xl font-light text-slate-700 mt-2">
        Location: {meetup.location}
      </div>
    </div>

    <!-- CTA -->
    <button
      class="px-12 py-4 rounded-md text-xl font-light text-white bg-indigo-600 my-4"
    >
      Learn more
    </button>
  </div>
</div>
