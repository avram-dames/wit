---
import type { Meetup } from "../data/types";

export interface Props {
  meetup: Meetup;
}

const { meetup } = Astro.props as Props;
---

<div
  class="mx-4 p-4 flex flex-col items-center space-y-4 border-solid border-b-[1.5px] last:border-none border-slate-700"
>
  <!-- Date -->
  <div class="text-2xl font-extrabold text-slate-700">
    {
      meetup.date.toLocaleDateString("en-gb", {
        year: "numeric",
        month: "long",
        day: "numeric",
        timeZone: "utc",
      })
    }
  </div>

  <!-- Title -->
  <div class="text-2xl font-light text-slate-500">{meetup.title}</div>
  
  <!-- CTA -->
  <button
    class="px-12 py-4 rounded-md text-xl font-light text-white bg-indigo-600"
    >Learn more</button
  >
</div>
